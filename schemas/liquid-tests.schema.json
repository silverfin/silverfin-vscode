          "value": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "custom": {
            "$ref": "#/$defs/textProperty"
          }
        }
      },
      "reconciliation": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "value": {
                "type": "number"
              },
              "name": {
                "type": "string"
              },
              "starred": {
                "type": "boolean"
              },
              "custom": {
                "$ref": "#/$defs/textProperty"
              },
              "results": {
                "$ref": "#/$defs/namedResult"
              }
            }
          },
          {
            "type": "null"
          }
        ]
      },
      "textProperty": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "^[^\\.]+\\.[^\\.]+$": {
            "oneOf": [
              {
                "type": [
                  "null",
                  "boolean",
                  "number",
                  "string",
                  "array"
                ]
              },
