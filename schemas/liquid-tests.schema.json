              "boolean",
              "number",
              "string",
              "array"
            ]
          }
        }
      },
      "namedResult": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "^[^\\.]+$": {
            "type": [
              "null",
              "boolean",
              "number",
              "string",
              "array"
            ]
          }
        }
      },
